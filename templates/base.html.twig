<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootswatch.com.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Handlee&display=swap" rel="stylesheet">
    {% endblock %}


</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand  col-1 ms-lg-5" href="{{ path('home') }}" ><img src={{asset('logo.png')}} alt="" width="50"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav ">

            {% if not app.user %}
                <li class="nav-item">
                     <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>

            {% else %}

              {% for role in app.user.roles %}

                {% if role=="ROLE_USER" %}

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Sorties</a>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('edit_profile',{'id': app.user.id}) }}">Mon profil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion </a>
                </li>


                <li class="nav-item">
                     <a class="nav-link" href="">Cr√©er une sortie</a>
                </li>


              {% elseif role=="ROLE_ADMIN" %}

                  <li class="nav-item">
                      <a class="nav-link" href="{{ path('home') }}">Sorties</a>
                  <li class="nav-item">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                </li>
                <li class="nav-item">
                   <a class="nav-link" href="{{ path('utilisateurs') }}">Participants</a>
                </li>

                  <li class="nav-item">
                      <a class="nav-link" href="{{ path('edit_profile',{'id': app.user.id}) }}">Mon profil</a>
                  </li>


                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion </a>
                </li>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    {% block body %}{% endblock %}
    {% block javascripts %}  {% endblock %}

</div>
</body>
</html>
